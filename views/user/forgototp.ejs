<body>
    <div class="text-center center-div d-flex align-items-center justify-content-center ", id="LoginPage" style="background-color: #d0d5dc; width: 100%; height: 100vh;">
        <div class="wrapper text-center center-div align-items-center justify-content-center ">
           <div class="title fw-bold">
              forgot password
           </div>

          
          


<!-- OTP form -->
<form action="/verifyforgotOTP" method="post">
    <h4>Enter OTP Code</h4>
    <div class="input-field" id="otpsec">
        <input type="number" name="num1"  />
        <input type="number" name="num2" disabled />
        <input type="number" name="num3" disabled />
        <input type="number" name="num4" disabled />
        <input type="number" name="num5" disabled />
        <input type="number" name="num6" disabled />
    </div>

   <input type="hidden" name="formType" value="<%=data%>" >

    <div id="otp-timer">00:00</div>

    <button>Verify OTP</button>
</form>

     </div>



      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

<script>
  $(document).ready(function() {
    var timeInSeconds = 300;

    // Function to update the timer
    function updateTimer() {
      var minutes = Math.floor(timeInSeconds / 60);
      var seconds = timeInSeconds % 60;
      var displayTime = (minutes < 10 ? '0' : '') + minutes + ':' + (seconds < 10 ? '0' : '') + seconds;
      $('#otp-timer').text(displayTime);

      timeInSeconds--;

      if (timeInSeconds < 0) {
        $('#otp-timer').text('Time expired');
        $('input[name^="num"]').prop('disabled', true);
      } else {
        setTimeout(updateTimer, 1000);
      }
    }

    updateTimer();
  });
</script>


</body>
</html>